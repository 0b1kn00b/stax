-cmd echo "Building Test Suite:"

# js
--next
-cmd echo "\t[Javascript]"

--next
-js bin/js_test.js
-main TestMain
-cp src/main/haxe
-cp src/test/haxe
-debug
-lib munit
-lib hamcrest
-lib xirsys_stdjs
--js-modern
-D test
#-D parallel

# Neko
--next
-cmd echo "\t[Neko]"

--next
-neko bin/neko_test.n
-main TestMain
-cp src/main/haxe
-cp src/test/haxe
-debug
-lib munit
-lib hamcrest
-D test
#-D parallel

# as3
--next
-cmd echo "\t[Actionscript]"

--next
-swf bin/as3_test.swf
-swf-version 9
-main TestMain
-cp src/main/haxe
-cp src/test/haxe
-debug
-lib munit
-lib hamcrest
-D test
#-D parallel

--next
-cmd echo "\nRunning Code Coverage:\n\t[Javascript]\n\t[Actionscript]"

--next
-cmd haxelib run munit test -coverage -nogen -js -as3

--next
-cmd echo "\nRunning Tests:\n\t[Javascript]\n\t[Actionscript]\n\t[Neko]"

--next
-cmd haxelib run munit test -nogen -js -as3 -neko
